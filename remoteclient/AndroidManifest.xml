<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tuchemnitz.remoteclient"
    android:versionCode="1"
    android:versionName="1.2" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
<!--         android:theme="@style/AppTheme" > -->
<!-- android:launchMode="singleTask" -->
		
        <activity
            android:name="de.tuchemnitz.remoteclient.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tuchemnitz.remoteclient.BewegungActivity"
            android:label="@string/title_activity_bewegung"
            android:finishOnTaskLaunch="true"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.tuchemnitz.remoteclient.SprachausgabeActivity"
            android:label="@string/title_activity_sprachausgabe"
            android:finishOnTaskLaunch="true"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.tuchemnitz.remoteclient.ConfigActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" 
            android:label="@string/title_activity_config"
            android:finishOnTaskLaunch="true"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.tuchemnitz.remoteclient.SpecialsActivity"
            android:label="@string/title_activity_specials"
            android:finishOnTaskLaunch="true"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.tuchemnitz.remoteclient.SettingActivity"
            android:label="@string/title_activity_setting"
            android:finishOnTaskLaunch="true"
            android:noHistory="true" >
        </activity>
    </application>

</manifest>