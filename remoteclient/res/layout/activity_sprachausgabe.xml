<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SprachausgabeActivity"
    android:orientation="vertical" >

    <!--  <TextView
        android:id="@+id/greeting_field"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="@string/sprachausgabe_text" /> -->
    
    <TextView
        android:id="@+id/spk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/titel_sprachausgabe"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
	    android:id="@+id/spk_editText1"
	    android:layout_width="fill_parent" 
	    android:inputType="textMultiLine" 
	    android:layout_height="wrap_content"
	    android:hint="@string/edit_sprachausgabe"
  	/>


    <RelativeLayout
        android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >

    <Button
        android:id="@+id/spk_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="okbutton_event"
        android:text=" OK " />

    </RelativeLayout>

</LinearLayout>